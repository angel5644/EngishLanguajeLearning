<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - English Language Learning</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/AwesomeFonts/css/font-awesome.min.css")
    @*@Styles.Render("~/Content/ell.css")*@
    @RenderSection("styles", required: false)
</head>
<body>

    <nav class="navbar navbar-gray navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar6">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand logo" href="@Url.Action("Index","Home")">
                    <img alt="English Language Learning" src="~/images/logos/ell_logo_transparent_50.png" class="ell-logo">
                </a> 
                @Html.ActionLink("English Language Learning", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text" })
            </div>
            <div id="navbar6" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Cursos", "Courses", "Home")</li>
                    <li>@Html.ActionLink("Recursos", "EnglishResources", "Home")</li>
                    <li class=""><a class="btn no-opacity" href="https://translate.google.com/manager/website/?hl=yi" title="View in English"><i class="fa fa-flag-o"></i></a></li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    <li class="dropdown admin">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Emergency Contacts", "Index", "EmergencyContacts")</li>
                            <li>@Html.ActionLink("Students", "Index", "Students")</li>
                            <li>@Html.ActionLink("Payments", "Index", "Payments")</li>
                        </ul>
                    </li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
            <!--/.nav-collapse -->
        </div>
        <!--/.container-fluid -->
    </nav>
    <br/>
    <br/>
    <div class="container body-content">
        @Html.Partial("_Alerts")
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                    @*<img alt="English Language Learning" src="~/images/logos/ell_logo_transparent.png" height="50">*@
                    <p>Discite - Vivet - Esse</p>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 text-right" >
                    <p>&copy; @DateTime.Now.Year - English Language Learning</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
