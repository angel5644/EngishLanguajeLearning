@model IEnumerable<ELL.Models.Payment>

@{
    ViewBag.Title = "Payments";
}

<h2>Payments</h2>

<hr />
<p>
    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-default" })
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.Display("Student")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Student.FullName, "Details", "Students", new { id = item.StudentId }, new { @class = "" })
                    </td>
                    <td>
                        @item.Amount.ToString("C")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

                        <a href="@Url.Action("Edit", "Edit", new { id = item.Id })" class="btn btn-default" title="Edit"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                        <a href="@Url.Action("Details", "Details", new { id = item.Id })" class="btn btn-default" title="Details">   <i class="fa fa-list fa-lg"></i></a>
                        <a href="@Url.Action("Delete", "Delete", new { id = item.Id })" class="btn btn-default" title="Delete">   <i class="fa fa-trash-o fa-lg"></i></a>
                        
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

