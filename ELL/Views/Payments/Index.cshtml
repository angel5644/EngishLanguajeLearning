@model IEnumerable<ELL.Models.Payment>

@{
    ViewBag.Title = "Payments";
}

<h2>Payments</h2>

<hr />
<p>
    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-default" })
</p>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered" id="payments-table">
                <thead>
                    <tr>
                        <th>
                            Student
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Student.FullName, "Details", "Students", new { id = item.StudentId }, new { @class = "" })
                            </td>
                            <td>
                                @item.Date.ToString(ELL.Models.Globals.Formats.DateFormatDDMMYYY)
                            </td>
                            <td>
                                @item.Amount.ToString("C")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Payments", new { id = item.Id })" class="btn btn-default" title="Edit"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                <a href="@Url.Action("Details", "Payments", new { id = item.Id })" class="btn btn-default" title="Details">   <i class="fa fa-list fa-lg"></i></a>
                                <a href="@Url.Action("Delete", "Payments", new { id = item.Id })" class="btn btn-default" title="Delete">   <i class="fa fa-trash-o fa-lg"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/dataTables.bootstrap.min.css")
    @Styles.Render("~/Content/buttons.dataTables.min.css")

}
@section Scripts
{
@Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.min.js")   
    @Scripts.Render("~/Scripts/dataTables.buttons.min.js")
    @Scripts.Render("~/Scripts/buttons.flash.min.js")
    @Scripts.Render("~/Scripts/pdfmake.min.js")
    @Scripts.Render("~/Scripts/vfs_fonts.js")
    @Scripts.Render("~/Scripts/buttons.html5.min.js")
    @Scripts.Render("~/Scripts/buttons.print.min.js")
    @Scripts.Render("~/Scripts/payments/payments.js")
}

